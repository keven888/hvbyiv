{
  "manifest_version": 2,
  "name": "推特任务执行",
  "version": "1.2.2",
  "description": "可以执行推特任务",
  "browser_action": {
    "default_icon": "./assets/icon-512.png",
    "default_title": "推特机器人",
    "default_popup": "./dist/options/index.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "./dist/background/index.global.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./dist/content/index.global.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "storage",
    "cookies",
    "tabs",
    "history",
    "webRequest",
    "activeTab",
    "notifications",
    "webRequestBlocking",
    "*://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
